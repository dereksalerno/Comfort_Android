<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.AppliedArgonautics.comfort"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_comfort_pig"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.AppliedArgonautics.comfort.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.AppliedArgonautics.comfort.BarActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_bar"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.AppliedArgonautics.comfort.FoodActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_food"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.AppliedArgonautics.comfort.ShowListActivity"
            android:label="@string/title_activity_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.AppliedArgonautics.comfort.WhiskeyActivity"
            android:label="@string/title_activity_whiskey" >
        </activity>
        <activity
            android:name="com.AppliedArgonautics.comfort.IrishAndScotchActivity"
            android:label="@string/title_activity_irish_and_scotch" >
        </activity>
        <activity
            android:name="com.AppliedArgonautics.comfort.OtherAmericanWhiskeyActivity"
            android:label="@string/title_activity_other_whiskey" >
        </activity>
        <activity
            android:name="com.AppliedArgonautics.comfort.ForeignWhiskey"
            android:label="@string/title_activity_foreign_whiskey" >
        </activity>
        <activity
            android:name="com.AppliedArgonautics.comfort.BeerActivity"
            android:label="@string/title_activity_beer" >
        </activity>
        <activity
            android:name="com.AppliedArgonautics.comfort.WineActivity"
            android:label="@string/title_activity_wine" >
        </activity>
        <activity
            android:name="com.AppliedArgonautics.comfort.WhiteBottleActivity"
            android:label="@string/title_activity_white_bottle" >
        </activity>
        <activity
            android:name="com.AppliedArgonautics.comfort.NotesActivity"
            android:label="@string/title_activity_red_bottle" >
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity android:name="com.facebook.LoginActivity" >
        </activity>
        <activity
            android:name="com.AppliedArgonautics.comfort.WineGlassActivity"
            android:label="@string/title_activity_wine_glass" >
        </activity>
    </application>

</manifest>